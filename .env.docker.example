# =============================================================================
# StockFlow - Docker Environment Variables
# =============================================================================
# Copy this file to .env.docker and fill in the values
# Used by: docker-compose up
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=stockflow
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_PORT=3000

# -----------------------------------------------------------------------------
# JWT Secrets (REQUIRED - Generate with: openssl rand -base64 32)
# -----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_here_at_least_32_characters
JWT_REFRESH_SECRET=your_refresh_secret_here_at_least_32_characters
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# -----------------------------------------------------------------------------
# Frontend URL (for CORS)
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# Stripe (Optional - for subscription management)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# -----------------------------------------------------------------------------
# Arcjet (Optional - for advanced rate limiting)
# -----------------------------------------------------------------------------
ARCJET_KEY=your_arcjet_key
ARCJET_ENABLED=false