# =============================================================================
# StockFlow - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!
#
# Usage: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=stockflow
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis Cache
# -----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Backend API
# -----------------------------------------------------------------------------
API_PORT=3000

# JWT Secrets (REQUIRED - generate secure random strings)
# Generate with: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_here_min_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_min_32_characters
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost

# -----------------------------------------------------------------------------
# Frontend Client
# -----------------------------------------------------------------------------
CLIENT_PORT=3001
VITE_API_URL=/api

# -----------------------------------------------------------------------------
# Nginx
# -----------------------------------------------------------------------------
HTTP_PORT=80
# HTTPS_PORT=443

# -----------------------------------------------------------------------------
# Stripe (optional)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# Arcjet Rate Limiting (optional)
# -----------------------------------------------------------------------------
ARCJET_KEY=
ARCJET_ENABLED=false

# -----------------------------------------------------------------------------
# Cloudflare Workers + R2 Storage
# -----------------------------------------------------------------------------
CF_WORKER_URL=https://stockflow-images.daniel-esloh.workers.dev
CF_AUTH_SECRET=